/var/opt/remi/<%= scope['lmsweb::php_version'] -%>/log/php-fpm/*log {
    missingok
    notifempty
    sharedscripts
    delaycompress
    postrotate
	/bin/kill -SIGUSR1 `cat /var/opt/remi/<%= scope['lmsweb::php_version'] -%>/run/php-fpm/php-fpm.pid 2>/dev/null` 2>/dev/null || true
    endscript
    createolddir 644 root root
    olddir /var/opt/remi/<%= scope['lmsweb::php_version'] -%>/log/php-fpm/archive
}